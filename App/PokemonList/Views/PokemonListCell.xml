<PokemonListCell>

    <UIView left="8" top="8" right="100% - 8" bottom="100% - 8">

        <UILabel
            bottom="100%"
            font="regular 18"
            text="{pokemon.name}"
            textAlignment="center"
            textColor="#3C59A5"
            numberOfLines="0"
            width="100%" />

        <ImageView
            backgroundColor="white"
            bottom="previous.top - 4"
            center.x="parent.center.x"
            url="{pokemon.image}"
            layer.borderColor="#E3E3E3"
            layer.borderWidth="2"
            layer.cornerRadius="height / 2"
            top="0"
            width="height" />

    </UIView>

</PokemonListCell>
